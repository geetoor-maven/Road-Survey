<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:id="@+id/relativeumum"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".surveyorumum">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/background_login"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="50dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="30dp"
               android:text="Input Data"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:textColor="#000"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="20dp"
               android:text="Surveyor Umum"
               android:layout_marginLeft="10dp"/>
       </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/munculgambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/txtlatitude"
        android:text="latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtlongtitude"
        android:text="longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtlatitude"
        android:visibility="gone"/>

<TextView
    android:id="@+id/textnama"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="25dp"
    android:layout_below="@id/card1"
    android:text="nama"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:textColor="#000"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="8dp"
        android:layout_below="@id/textnama">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
          <EditText
              android:id="@+id/nama"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:hint="Nama Anda "
              android:backgroundTint="#fff"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/visibiliti2"
        android:layout_below="@id/card3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="100dp"
        app:cardCornerRadius="8dp"
        android:visibility="gone"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/karebosi"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KAREBOSI"
                android:textSize="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/daya"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DAYA"
                android:textSize="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/maros"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAROS"
                android:textSize="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/pangkep"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PANGKEP"
                android:textSize="20dp"
                android:textAlignment="center"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/imagemuncul"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/visibiliti2"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/textulp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_below="@id/card2"
        android:text="ulp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#000"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="8dp"
        android:layout_below="@id/textulp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ulp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Pilih Ulp"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/img1"
                android:layout_alignParentEnd="true"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ulp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/spinner"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/texttemuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_below="@id/imagemuncul"
        android:text="temuan"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#000"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="8dp"
        android:layout_below="@id/texttemuan"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/temuan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Pilih Temuan"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/img2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/spinner"
                android:layout_marginLeft="230dp"
                android:layout_alignTop="@id/temuan"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/visibiliti3"
        android:layout_below="@id/card4"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="100dp"
        app:cardCornerRadius="8dp"
       android:visibility="gone"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/kontruksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KONTRUKSI"
                android:textSize="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/row"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ROW"
                android:textSize="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/material"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MATERIAL"
                android:textSize="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/proteksi"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROTEKSI"
                android:textSize="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/dll"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DLL"
                android:textSize="20dp"
                android:textAlignment="center"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textpilih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_below="@id/visibiliti3"
        android:text="Titik Koordinat"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#000"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="200dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="8dp"
        android:layout_below="@id/textpilih"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:src="@drawable/lokasi"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/textkordinat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_below="@id/card5"
        android:text="Upload Foto"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"/>
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_below="@id/textkordinat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btnpilihfile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Ambil Foto"/>
        <TextView
            android:layout_alignTop="@id/btnpilihfile"
            android:id="@+id/textsudahdipilih"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="file belum di pilih"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/card6"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="8dp"
        android:layout_below="@id/relative"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/detail_kerja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Detail kerja"
            android:backgroundTint="#fff"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card7"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="8dp"
        android:layout_below="@id/card6"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/card7"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="-10dp"
            android:backgroundTint="#fff"
            android:hint="alamat" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/texttanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_below="@id/card7"
        android:text="Tanggal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:visibility="gone"
        android:textColor="#000"/>
    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/card8"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="8dp"
        android:layout_below="@id/texttanggal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="PILIH TANGGAL"
                android:backgroundTint="#fff"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:background="@drawable/bgbawahlogin"
        android:layout_below="@id/card8"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <Button
            android:id="@+id/kirim"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:text="kirim"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_style"
            android:textColor="#000"/></RelativeLayout>
</RelativeLayout>
    </ScrollView>